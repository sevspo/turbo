{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "nest",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "incremental": true,
    "strictBindCallApply": false
  }
}
